{
  // 使用 IntelliSense 了解相关属性。 
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "TS Current File",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "DEBUG": "*",
        "NODE_ENV": "development"
      },
      "outputCapture": "std",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "program": "${file}"
    }
  ]
}