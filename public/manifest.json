{
    "manifest_version": 2,
    "name": "get_reply",
    "description": "chrome extension",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage", 
        "webRequest", 
        "webRequestBlocking", 
        "<all_urls>" 
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "src/popup/index.html"
    },
    "content_scripts": 
	[
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}