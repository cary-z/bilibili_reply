{
    "manifest_version": 2,
    "name": "get_reply",
    "description": "chrome extension",
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage", 
        "webRequest", 
        "webRequestBlocking", 
        "<all_urls>" 
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "browser_action": {
        "default_popup": "src/popup/index.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}